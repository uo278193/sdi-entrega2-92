{% extends "layout.twig" %}
{% block title %} SDINSTAGRAM {% endblock %}
{% block main_container %}
    <h2>Listado de invitaciones de amistad</h2>
    <div class="row">
        <!-- http://librosweb.es/libro/bootstrap_3/capitulo_2/tipos_de_rejillas.html -->
        <div class="table-responsive">
            <table class="table table-hover" id="tableShowUsers">
                <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col"></th>
                    <!--  <th scope="col"></th>-->
                </tr>
                </thead>
                <tbody>
                {% for friendRequest in friendRequestList %}
                    <tr>
                        <td scope="row">{{ user.nombre }}</td>
                        <td scope="row">{{ user.apellidos }}</td>
                        <td scope="row">
                            <form action={{'/user/acceptFriendRequest/'~friendRequest._id}} method="post">
                                <input type="submit" class="btn btn-primary btnSendFR" value="Aceptar" >
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>




        <!-- Fin del Bloque autor -->
    </div>
    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/users/list/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
{% endblock %}