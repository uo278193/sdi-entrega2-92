{% extends "layout.twig" %}
{% block title %} SDIGRAM - Peticiones de amistad {% endblock %}
{% block main_container %}
    <h2 id="idTituloPeticionesAmistadListaUser">Listado de invitaciones de amistad</h2>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover" id="idTablaListaPeticionesAmistad">
                <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>

                {% for request in friendRequests %}
                    <tr >
                        <td scope="row">{{ request.nombre }}</td>
                        <td scope="row">{{ request.apellidos }}</td>
                        <td scope="row">
                            <form action={{'/user/acceptFriendRequest/'~request._id}} method="post">
                                <input type="submit" class="btn btn-primary btnSendFR" value="Aceptar" >
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

    </div>
    <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/users/list/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
{% endblock %}